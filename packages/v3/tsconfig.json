{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["dev/*"],
      "~/*": ["components/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
